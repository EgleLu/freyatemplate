<section id="footer">
    {% if settings.show_main_menu %}
        <div class="footer-main-menu footer-b">
            <ul class="navigation-menu">
                <h3>Menu</h3>
                {% for link in linklists.main-menu.links %}
                <li>
                    {% assign child_list_handle = link.title | handleize %}
                    {% if linklists[child_list_handle].links != blank %}
                    <a href="{{ link.url }}">{{ link.title }}</a>
                    [{% for childlink in linklists[child_list_handle].links %}
                        <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                    {% endfor %}]
                    {% else %}
                    <a href="{{ link.url }}">{{ link.title }}</a>
                    {% endif %}
                </li>
            {% endfor %}
                </ul>
        </div>
    {% endif %}
    {% if settings.show_footer_menu %}
    <div class="footer-menu-policies footer-b" >
        <h3>{{ settings.second_title}}</h3>
        <ul class="secondary-menu">
            {% for link in linklists.footer.links %}
            <li>
                {% assign child_list_handle = link.title | handleize %}
                {% if linklists[child_list_handle].links != blank %}
                <a href="{{ link.url }}">{{ link.title }}</a>
                [{% for childlink in linklists[child_list_handle].links %}
                    <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                {% endfor %}]
                {% else %}
                <a href="{{ link.url }}">{{ link.title }}</a>
                {% endif %}
            </li>
          {% endfor %}
        </ul>
    </div>
    {% endif %}

    {% if settings.show_social_icons %}
        <div class="footer-socials footer-b " >
            <h3>{{ settings.social_title }} </h3>
            <div class="icons">

        
                 <a href="{{settings.social_url_1}}" class="icon-link">
                    <img src="{{ settings.social_icon_1 | image_url}}" alt="{{settings.social_icon_1.alt}}">
                </a>
                <!-- <a href="{{settings.social_url_2}}" class="icon-link">
                    <img src="{{ settings.social_icon_2 | image_url}}" alt="{{settings.social_icon_1.alt}}">
                </a>
                <a href="{{settings.social_url_3}}" class="icon-link">
                    <img src="{{ settings.social_icon_3 | image_url}}" alt="{{settings.social_icon_1.alt}}">
                </a>
                <a href="{{settings.social_url_4}}" class="icon-link">
                    <img src="{{ settings.social_icon_4 | image_url}}" alt="{{settings.social_icon_1.alt}}">
                </a> -->

            </div>
        </div>
    {% endif %}
    {% if settings.show_email_subscribe %}
        <div class="footer-subscribe footer-b">
            <h3>{{ settings.subscribe_form_title}}</h3>
            {% render 'email-form' %}

        </div>
    {% endif %}

</section>
<section class="copyright">
    <p>&copy; All rights reserved {{shop.name}}, <span id="year"></span></p>
    <p>Crafted by <a href="https://claashy.com">classhy.com</a></p>
</section>


<script>
    document.getElementById("year").innerHTML = new Date().getFullYear();
</script>
