<div class="menu-drawer-inner">
    <ul class="navigation-menu">
    {% for link in linklists.main-menu.links %}
    <li>
        {% assign child_list_handle = link.title | handleize %}
        {% if linklists[child_list_handle].links != blank %}
        <a href="{{ link.url }}">{{ link.title }}</a>
        [{% for childlink in linklists[child_list_handle].links %}
            <a href="{{ childlink.url }}">-{{ childlink.title | escape }}</a>
        {% endfor %}]
        {% else %}
        <a href="{{ link.url }}">{{ link.title }}</a>
        {% endif %}
    </li>
  {% endfor %}
    </ul>

    <div class="footer-menu">
        <ul class="secondary-menu">

            {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                        <a href="{{ routes.account_url }}" class="text-base">Account</a>
                        {{ 'Log out'  | customer_logout_link | replace: '<a', '<a class="text-base "' }}
                    {% else %}
                        {{ 'Log in ' | customer_login_link | replace: '<a', '<a class="text-base "' }}
                        {{ 'Register' | customer_register_link | replace: '<a', '<a class="text-base "' }}
                    {% endif %}
                {% endif %}
