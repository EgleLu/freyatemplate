<div class="front">
    <h1>{{section.settings.title}}</h1>
</div>


<section class="template-list shop-collection">
           

    <div class="grid" data-aos="fade-in"
    data-aos-duration="1500">
        {% for collection in collections %}
        {% if collection.all_products_count > 0 %}
            <div class="grid-item">
                {% if collection.featured_image != blank %}
                    {% assign collection_image = collection.featured_image %}
                {% else %}
                    {% assign collection_image = collection.products.first.image %}
                {% endif %}
            <a href="{{ collection.url }}"> 
                <img src="{{ collection_image | img_url: 'large' }}" alt="{{ collection.title | escape }}" class="w-80 block-auto">
            </a>
            <p class="tilte-second"> <a href="{{ collection.url }}">{{ collection.title }}</a></p>
            </div>
        {% endif %}
        {% endfor %}

    </div>
</section>






{% schema %}
{
    "name": "Template List Collections",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Collections",
            "label": "Title"
        }
    ]
}
{% endschema %}